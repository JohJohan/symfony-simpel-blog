{% set routeName = app.request.attributes.get('_route') %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="{{ path('home') }}">{{ app_name }}</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item{% if routeName == 'home' %} active{% endif %}">
        <a class="nav-link"  href="{{ path('home') }}">Home {% if routeName == 'home' %}<span class="sr-only">(current)</span>{% endif %}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link{% if routeName starts with 'blog.' %} active{% endif %}" href="{{ path('blog.list') }}">Blog list</a>
      </li>
    </ul>
  </div>
</nav>
